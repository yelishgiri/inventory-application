<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <!-- Categories Section -->
        <section class="section">
            <div class="section-header">
                <h2>Categories</h2>
                <a href="/category/addCategory" class="add-btn">Add Category</a>
            </div>
            
            <% if (categories && categories.length > 0) { %>
                <div class="items-grid">
                    <% categories.forEach((category) => { %>
                        <div class="item-card">
                            <h3><%= category.category_name %></h3>
                            <p class="description"><%= category.category_description %></p>
                            <p class="date">Added: <%= new Date(category.category_created_at).toLocaleDateString() %></p>
                            <a href="/category/id/<%= category.category_id %>" class="more-info-btn">More Info</a>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="empty-state">No categories found. <a href="/category/addCategory">Add the first one!</a></p>
            <% } %>
        </section>

        <section class="section">
            <div class="section-header">
                <h2>Products</h2>
                <a href="/product/addProduct" class="add-btn">Add Product</a>
            </div>
            
            <% if (products && products.length > 0) { %>
                <div class="items-grid">
                    <% products.forEach((product) => { %>
                        <div class="item-card">
                            <% if (product.product_image_url) { %>
                                <img src="<%= product.product_image_url %>" alt="<%= product.product_name %>" class="product-image">
                            <% } %>
                            <h3><%= product.product_name %></h3>
                            <p class="description"><%= product.product_description %></p>
                            <p class="category">Category: <%= product.category_name %></p>
                            <p class="date">Added: <%= new Date(product.product_created_at).toLocaleDateString() %></p>
                            <a href="/product/id/<%= product.product_id %>" class="more-info-btn">More Info</a>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="empty-state">No products found. <a href="/product/addProduct">Add the first one!</a></p>
            <% } %>
        </section>
    </div>
</body>
</html>
