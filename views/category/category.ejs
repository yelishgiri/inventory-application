<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.category_name %> - Category Details</title>
    <link rel="stylesheet" href="/category/styles.css">
</head>
<body>
    <div class="container">
        <div class="detail-card">
            <h2><%= category.category_name %></h2>
            <div class="image-container">
                <img src="<%= category.category_image_url %>" alt="<%= category.category_name %>" />
            </div>
            <div class="info-section">
                <p><strong>Description:</strong> <%= category.category_description %></p>
                <p><strong>Date Added:</strong> <%= category.category_created_at %></p>
            </div>
            <div class="actions">
                <a href="/category/id/<%= category.category_id %>/updateCategory" class="btn btn-primary">Update</a>
                <form action="/category/id/<%= category.category_id %>/deleteCategory" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                </form>
            </div>
        </div>

        <div class="products-section">
            <h2>Items In This Category</h2>
            <% if (products && products.length > 0) { %>
                <div class="products-grid">
                    <% products.forEach((product) => { %>
                        <div class="product-card">
                            <div class="product-image">
                                <img src="<%= product.product_image_url %>" alt="<%= product.product_name %>" />
                            </div>
                            <div class="product-info">
                                <h3><%= product.product_name %></h3>
                                <p><strong>Description:</strong> <%= product.product_description %></p>
                                <p><strong>Added:</strong> <%= product.product_created_at %></p>
                                <a href="/product/id/<%= product.product_id %>" class="btn btn-secondary">More Info</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="no-products">No products found in this category.</p>
            <% } %>
        </div>

        <div class="back-link">
            <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</body>
</html>
