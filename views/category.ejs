<h2><%= category.category_name %></h2>
<img src="<%= category.category_image_url %>" alt="product_image" />
<ul>
    <li>
        Description: <%= category.category_description %>
    </li>
    <li>
        Dated Added: <%= category.category_created_at %>
    </li>
    <a href="/category/id/<%= category.category_id %>/updateCategory">Update</a>
    <form action="/category/id/<%= category.category_id %>/deleteCategory" method="POST" style="display: inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
    </form>
</ul>

<h2>Items In This Category</h2>
<% products.map((product) => { %>
        <ul>
                <img src="<%= product.product_image_url %>" alt="prduct_image" />
                <li>Name: <%= product.product_name %> </li>
                <li>Description: <%= product.product_description %></li>
                <li>Added At: <%= product.product_created_at %></li>
                <a href="/product/id/<%= product.product_id %>">More Info</a>
        </ul>
       <%  }) %>